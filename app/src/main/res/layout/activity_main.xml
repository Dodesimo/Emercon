<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Emercon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mainTitle"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="54dp" android:textSize="60sp" android:textColor="#8E2D2D"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:typeface="monospace"/>
    <Button
            android:text="Start"
            android:layout_width="102dp"
            android:layout_height="100dp" android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.375"
            app:layout_constraintTop_toBottomOf="@+id/mainTitle" app:backgroundTint="#03A9F4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:typeface="monospace"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>